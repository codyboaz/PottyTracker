<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="edu.pottytrackercsumb.pottytracker.RateBathroom"
    android:orientation="vertical"
    android:background="@color/Backround">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp">

        <RadioGroup
            android:layout_gravity="center"
            android:id="@+id/radioRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Horrible"
                android:id="@+id/textView2"
                android:textSize="@dimen/standardTextSize"
                android:textColor="@color/GhostWhite"/>

            <RadioButton
                android:textColor="@color/GhostWhite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radioHeight"
                android:id="@+id/radioButton"
                android:checked="true"
                android:text="1"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Poor"
                android:id="@+id/textView3"
                android:textSize="@dimen/standardTextSize"
                android:textColor="@color/GhostWhite"/>

            <RadioButton
                android:textColor="@color/GhostWhite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radioHeight"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:text="2"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Satisfactory"
                android:id="@+id/textView4"
                android:textSize="@dimen/standardTextSize"
                android:textColor="@color/GhostWhite"/>

            <RadioButton
                android:textColor="@color/GhostWhite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radioHeight"
                android:id="@+id/radioButton3"
                android:text="3"
                android:checked="false"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Very Good"
                android:id="@+id/textView5"
                android:textSize="@dimen/standardTextSize"
                android:textColor="@color/GhostWhite"/>

            <RadioButton
                android:textColor="@color/GhostWhite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radioHeight"
                android:id="@+id/radioButton4"
                android:text="4"
                android:checked="false"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Excellent"
                android:id="@+id/textView6"
                android:textSize="@dimen/standardTextSize"
                android:textColor="@color/GhostWhite"/>

            <RadioButton
                android:textColor="@color/GhostWhite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radioHeight"
                android:id="@+id/radioButton5"
                android:text="5"
                android:checked="false"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/enterBttn"
            android:minWidth="@dimen/medButtonWidth"
            android:background="@color/colorPrimary"
            android:textColor="@color/GhostWhite"
            android:minHeight="@dimen/medButtonHeight" />

    </LinearLayout>

</LinearLayout>
