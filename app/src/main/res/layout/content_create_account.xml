<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Backround"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_create"
    tools:context="edu.pottytrackercsumb.pottytracker.CreateAccount"
    android:orientation="vertical">


    <TextView
        android:text="First Name"
        android:textSize="@dimen/standardTextSize"
        android:textColor="@color/GhostWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standardPadding2"
        android:layout_marginBottom="@dimen/smallPadding" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/standardPadding"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Gray"
        android:background="@android:color/white"
        android:minHeight="@dimen/textBoxHeight"
        android:singleLine="true" />

    <TextView
        android:text="Last Name"
        android:textSize="@dimen/standardTextSize"
        android:textColor="@color/GhostWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/standardPadding"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Gray"
        android:background="@android:color/white"
        android:minHeight="@dimen/textBoxHeight"
        android:singleLine="true" />

    <TextView
        android:text="Username"
        android:textSize="@dimen/standardTextSize"
        android:textColor="@color/GhostWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/standardPadding"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Gray"
        android:background="@android:color/white"
        android:minHeight="@dimen/textBoxHeight"
        android:singleLine="true" />

    <TextView
        android:text="Password"
        android:textSize="@dimen/standardTextSize"
        android:textColor="@color/GhostWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/standardPadding"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Gray"
        android:background="@android:color/white"
        android:minHeight="@dimen/textBoxHeight"
        android:singleLine="true" />
    <TextView
        android:text="Confirm Password"
        android:textColor="@color/GhostWhite"
        android:textSize="@dimen/standardTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding" />

    <EditText
        android:id="@+id/rePassword"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/standardPadding"
        android:layout_height="wrap_content"
        android:textColorHint="@color/Gray"
        android:background="@android:color/white"
        android:minHeight="@dimen/textBoxHeight"
        android:singleLine="true" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/standardPadding"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:background="@color/colorPrimary"
            android:textColor="@color/GhostWhite"
            android:id="@+id/createBttn"
            android:layout_marginRight="20dp"
            android:minWidth="@dimen/medButtonWidth"
            android:textStyle="italic"
            android:minHeight="@dimen/medButtonHeight"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/colorPrimary"
            android:textColor="@color/GhostWhite"
            android:id="@+id/cancelButton"
            android:minWidth="@dimen/medButtonWidth"
            android:textStyle="italic"
            android:minHeight="@dimen/medButtonHeight"/>
    </LinearLayout>

</LinearLayout>
