<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Backround"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_page"
    tools:context="edu.pottytrackercsumb.pottytracker.HomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello"
        android:id="@+id/helloUser"
        android:textSize="35dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@color/GhostWhite"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find A Bathroom"
            android:id="@+id/findBttn"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/GhostWhite"
            android:minWidth="175dp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate A Bathroom"
            android:id="@+id/rateBttn"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/GhostWhite"
            android:layout_marginTop="20dp"
            android:minWidth="175dp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Your Ratings"
            android:id="@+id/ratingBttn"
            android:background="@color/colorPrimary"
            android:textColor="@color/GhostWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:minWidth="175dp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>
